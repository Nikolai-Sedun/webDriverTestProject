<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Testing suite" verbose="2" parallel="tests" thread-count="1"
  allow-return-values="true">
  <test name="Login tests">
    <classes>
      <class name="com.itacademy.tests.mail.LoginTest"/>
    </classes>
  </test>
  <test name="Sending mail tests">
    <classes>
      <class name="com.itacademy.tests.mail.SendingMailTest"/>
    </classes>
  </test>
  <test name="Sending not full mail tests">
    <classes>
      <class name="com.itacademy.tests.mail.SendingNotFullMailTest"/>
    </classes>
  </test>
  <test name="Draft mail tests">
    <classes>
      <class name="com.itacademy.tests.mail.DraftMailTest"/>
    </classes>
  </test>
</suite>
